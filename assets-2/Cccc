import io.vertx.scala.core.http.HttpServerResponse
import io.vertx.scala.ext.web.{Router, RoutingContext}
import io.vertx.scala.core.json.JsonObject

// Create a Vert.x router
val router = Router.router(vertx)

// Define a route that returns a JSON response
router.get("/api/data").handler { routingContext: RoutingContext =>
  // Create a JSON object
  val jsonObject = new JsonObject()
  jsonObject.put("message", "Hello, JSON!")

  // Get the HTTP server response
  val response: HttpServerResponse = routingContext.response()

  // Set the JSON object as the response body
  response.putHeader("Content-Type", "application/json")
  response.end(jsonObject.encode())
}

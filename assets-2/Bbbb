useReactCacheQuery.jsx

import {useState} from "react";
import LS from "../utils/LS.js";

export default function (storeName = "CACHE_TEXTAREA_TEMP", style = {}) {
    let [CurrentValue, setCurrentValue] = useState(LS.get(storeName, ""));

    let component = <textarea name="" id="" cols="30" rows="10" value={CurrentValue} style={style} onChange={e => {
        setCurrentValue(e.target.value)
        LS.set(storeName, e.target.value)
    }}></textarea>

    return {
        CurrentValue,
        component
    }
}

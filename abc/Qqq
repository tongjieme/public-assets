import React from 'react';

const CustomHeader = ({ column }) => {
  const headerName = column.getColDef().headerName;
  const lowercasePart = headerName.substring(headerName.indexOf('(') + 1, headerName.indexOf(')')).toLowerCase();
  const transformedHeaderName = headerName.replace(headerName.substring(headerName.indexOf('(') + 1, headerName.indexOf(')')), lowercasePart);

  return <div>{transformedHeaderName}</div>;
};

export default CustomHeader;



headerComponentFramework: CustomHeader

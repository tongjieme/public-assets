let isShiftDoubleClicked = false;
let firstClickTime = 0;

document.addEventListener('keydown', function(event) {
    if (event.key === "Shift") {
        if(isShiftDoubleClicked === false) {
            isShiftDoubleClicked = true;
            firstClickTime = new Date().getTime();
            setTimeout(function() {
                isFirstClick = false;
            }, 200); // Event within 200 milliseconds is considered as double click
        } else {
            let secondClickTime = new Date().getTime();
            if(secondClickTime - firstClickTime <= 200) {
                console.log("Shift key was double-clicked");
                isShiftDoubleClicked = false;
            }
        }
    }
});

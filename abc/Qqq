// Get the current date
	currentTime := time.Now()

	// Format the date as "yyyy-mm-dd"
	dateString := currentTime.Format("2006-01-02")

	fmt.Println(dateString) // Output: 2023-10-19



func getLastBusinessDay() string {
	// Get today's date
	today := time.Now()

	// Subtract one day from today's date
	previousDay := today.AddDate(0, 0, -1)

	// Check if the previous day is a weekend (Saturday or Sunday)
	if previousDay.Weekday() == time.Saturday {
		previousDay = previousDay.AddDate(0, 0, -1)
	} else if previousDay.Weekday() == time.Sunday {
		previousDay = previousDay.AddDate(0, 0, -2)
	}

	// Format the previous day as "yyyy-mm-dd"
	dateString := previousDay.Format("2006-01-02")

	return dateString
}

const yaml = require('js-yaml');
const fs   = require('fs');

try {
  const file1 = yaml.safeLoad(fs.readFileSync('/path/to/firstFile.yml', 'utf8'));
  const file2 = yaml.safeLoad(fs.readFileSync('/path/to/secondFile.yml', 'utf8'));

  const merged = Object.assign({}, file1, file2);

  console.log(merged);
} catch(e) {
  console.error(e)
}

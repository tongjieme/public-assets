import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.oauth2.client.OAuth2AuthorizedClient;
import org.springframework.security.oauth2.client.OAuth2AuthorizedClientService;
import org.springframework.security.oauth2.core.OAuth2AccessToken;

public class ExampleService {
    
  @Autowired
  private OAuth2AuthorizedClientService authorizedClientService;

  public String getToken() {
    OAuth2AuthorizedClient authorizedClient = this.authorizedClientService.loadAuthorizedClient("google", "service-account");
    OAuth2AccessToken accessToken = authorizedClient.getAccessToken();
  
    return accessToken.getTokenValue();
  }
}



SELECT
  CASE 
    WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 2 THEN FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 3 DAY))
    WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 1 THEN FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 2 DAY))
    ELSE FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 1 DAY))
  END AS T_1_Business_Day



SELECT
  CASE 
    WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 2 THEN FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 4 DAY))
    WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 1 THEN FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 3 DAY))
    ELSE FORMAT_DATE('%Y-%m-%d', DATE_SUB(CURRENT_DATE(), INTERVAL 2 DAY))
  END AS T_2_Business_Day



DECLARE T_1_Business_Day DATE;
DECLARE T_2_Business_Day DATE;

SET T_1_Business_Day = (
  SELECT
    CASE 
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 2 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 3 DAY)
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 1 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 2 DAY)
      ELSE DATE_SUB(CURRENT_DATE(), INTERVAL 1 DAY)
    END
);

SET T_2_Business_Day = (
  SELECT
    CASE 
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 2 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 4 DAY)
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 1 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 3 DAY)
      ELSE DATE_SUB(CURRENT_DATE(), INTERVAL 2 DAY)
    END
);

-- Use it in WHERE Clause 
SELECT * 
FROM `project.dataset.table` 
WHERE date_column BETWEEN T_2_Business_Day AND T_1_Business_Day;



DECLARE T_3_Business_Day DATE;

SET T_3_Business_Day = (
  SELECT
    CASE 
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 2 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 5 DAY)
      WHEN EXTRACT(DAYOFWEEK FROM CURRENT_DATE()) = 1 THEN DATE_SUB(CURRENT_DATE(), INTERVAL 4 DAY)
      ELSE DATE_SUB(CURRENT_DATE(), INTERVAL 3 DAY)
    END
);

import {useEffect, useState} from "react";
import {GetCacheByKey, SetCacheByKey} from "../utils/clients.js";

export default function ({key}){
    let [KeyValue, setKeyValue] = useState("");

    useEffect(() => {
        GetCacheByKey(key, function (value){
            setKeyValue(value)
        });
    }, [])

    const setValue = async function (value){
        await SetCacheByKey(key,value)
        setKeyValue(value)
    }

    return {
        KeyValue,
        setValue
    }
}
